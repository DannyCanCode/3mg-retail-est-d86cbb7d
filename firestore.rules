rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isManager() {
      return request.auth.token.role == 'manager';
    }
    function isRep() {
      return request.auth.token.role == 'rep';
    }

    // TEMPORARY: allow any authenticated user full access until roles are configured
    match /estimates/{estimateId} {
      allow read, write: if request.auth != null;
    }

    // Raw PDF uploads are private to uploader, but allow uploader read for dev
    match /uploads/{uid}/{fileId} {
      allow write: if request.auth == null || request.auth.uid == uid;
      allow read: if request.auth == null || request.auth.uid == uid;
    }

    // Parsed PDF data; allow read/write if authenticated
    match /uploads/{uid}/{fileId}/parsed/{docId} {
      allow read, write: if request.auth != null;
    }
  }
} 